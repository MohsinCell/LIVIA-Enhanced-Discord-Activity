{
  "manifest_version": 3,
  "name": "Livia - Discord Music Presence",
  "version": "1.0.0",
  "description": "Show what you're listening to on Spotify or Apple Music in Discord with rich album art and lyrics",
  "author": "Livia",
  "homepage_url": "https://livia.mom",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://api.livia.mom/*",
    "https://open.spotify.com/*",
    "https://music.apple.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://open.spotify.com/*"],
      "js": ["scripts/spotify.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://music.apple.com/*"],
      "js": ["scripts/apple-music.js"],
      "run_at": "document_idle"
    }
  ]
}
